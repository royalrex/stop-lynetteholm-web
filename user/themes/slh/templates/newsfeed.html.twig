{% extends 'partials/base.html.twig' %}
{% set collection = page.collection() %}

{% block body %}
  <section id="body">
    <div class="container mx-auto bg-white p-5 rounded-b">

      {% block content %}
        <div class="prose max-w-none">{{ page.content|raw }}</div>

        {% for child in collection %}
          {% include 'partials/newsfeed-item.html.twig' with {page: child} %}
          <div class="w-100 bg-brand my-16" style="height: 2px"></div>
        {% endfor %}
      {% endblock %}
    </div>
  </section>
{% endblock %}
